    draw_borders: true,
    show_song_table_header: true,
    browser_column_widths: [20, 38, 42],
    background_color: "#202020",
    text_color: "#BBBBBB",
    header_background_color: None,
    modal_background_color: "#202020",
    tab_bar: (
        enabled: true,
        active_style: (fg: "#202020", bg: "#BBBBBB", modifiers: "Bold"),
        inactive_style: (),
    ),
    highlighted_item_style: (fg: "#FF8800", modifiers: "Bold"),
    current_item_style: (fg: "#202020", bg: "#BBBBBB", modifiers: "Bold"),
    borders_style: (fg: "#BBBBBB"),
    highlight_border_style: (fg: "#FF0000"),
    symbols: (song: "üéµ", dir: "üìÅ", playlist: "üéº", marker: "\u{e0b0}"),
    progress_bar: (
        symbols: ["Ó∏Ñ", "Ó∏Ö", " "],
        track_style: (fg: "#202020"),
        elapsed_style: (fg: "#FF8800"),
        thumb_style: (fg: "#BBBBBB", bg: "#202020"),
    ),
    scrollbar: (
        symbols: ["‚îÇ", "‚ñà", "‚ñ≤", "‚ñº"],
        track_style: (),
        ends_style: (),
        thumb_style: (fg: "#BBBBBB"),
    ),
    song_table_format: [ // view in the queue
        (
            prop: (
                kind: Property(Artist),
                style: (fg: "#FFFFFF"), 
                default: (kind: Text("Unknown"))
            ),
            width: "40%",
        ),
        (
            prop: (
                kind: Property(Title),
                style: (fg: "#FFFFFF"), 
                default: (kind: Text("Unknown"))
            ),
            width: "40%",
        ),
        (
            prop: (
                kind: Property(Duration),
                style: (fg: "#FFFFFF"),
                default: (kind: Text("-"))
            ),
            width: "20%",
            alignment: Right,
        ),
    ],
    layout: Split(
        direction: Vertical,
        panes: [
            (
                pane: Pane(Header),
                size: "2",
            ),
            (
                pane: Pane(Tabs),
                size: "3",
            ),
            (
                pane: Pane(TabContent),
                size: "100%",
            ),
            (
                pane: Pane(ProgressBar),
                size: "1",
            ),
        ],
    ),
    header: (
        rows: [
            (
                left: [
                    (kind: Text("["), style: (fg: "#FF8800", modifiers: "Bold")),
                    (kind: Property(Status(StateV2(playing_label: "Playing", paused_label: "Paused", stopped_label: "Stopped"))), style: (fg: "#FF8800", modifiers: "Bold")),
                    (kind: Text("]"), style: (fg: "#FF8800", modifiers: "Bold"))
                ],
                center: [
                    (kind: Property(Song(Title)), style: (modifiers: "Bold"),
                        default: (kind: Text("No Song"), style: (modifiers: "Bold"))
                    )
                ],
                right: [
                    (kind: Property(Widget(Volume)), style: (fg: "#FF8800"))
                ]
            ),
            (
                left: [
                    (kind: Property(Status(Elapsed))),
                    (kind: Text(" / ")),
                    (kind: Property(Status(Duration))),
                    (kind: Text(" (")),
                    (kind: Property(Status(Bitrate))),
                    (kind: Text(" kbps)"))
                ],
                center: [
                    (kind: Property(Song(Artist)), style: (fg: "#FF8800", modifiers: "Bold"),
                        default: (kind: Text("Unknown"), style: (fg: "#FF8800", modifiers: "Bold"))
                    ),
                    (kind: Text(" - ")),
                    (kind: Property(Song(Album)),
                        default: (kind: Text("Unknown Album"))
                    )
                ],
                right: [
                    (
                        kind: Property(Widget(States(
                            active_style: (fg: "#FFFFFF", modifiers: "Bold"),
                            separator_style: (fg: "#FFFFFF")))
                        ),
                        style: (fg: "#888888")
                    ),
                ]
            ),
        ],
    ),
    browser_song_format: [
        (
            kind: Group([
                (kind: Property(Track)), // track #
                (kind: Text(" ")),
            ])
        ),
        (
            kind: Group([
                (kind: Property(Artist)),
                (kind: Text(" - ")),
                (kind: Property(Title)),
            ]),
            default: (kind: Property(Filename))
        ),
    ],
)
